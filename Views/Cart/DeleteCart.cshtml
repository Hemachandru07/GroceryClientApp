@model GroceryClientApp.Models.Cart

@{
    ViewData["Title"] = "DeleteCart";
    Layout = "_LayoutUser";
}

<h1>DeleteCart</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Cart</h4>
    <hr />
    <dl class="row">
      
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.grocery.GroceryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.grocery.GroceryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.grocery.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.grocery.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitPrice)
        </dd>
    </dl>
    
    <form asp-action="DeleteCart">
        <input type="hidden" asp-for="CartID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Menu">Back to Menu</a>
    </form>
</div>
